<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/md_keylines">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Daily matches reminder time" />

        <TimePicker
            android:id="@+id/daily_matches_reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:calendarViewShown="false"
            android:text="reminder time"
            android:timePickerMode="spinner" />

        <EditText
            android:id="@+id/max_distance_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/max_dist_search">

        </EditText>
        <EditText
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/gender" />


    <!-- Age fields -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/account_type"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/account_type_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/account_public"
            android:layout_column="0"
            android:layout_columnSpan="1"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/account_type_private"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/account_private"
            android:layout_column="0"
            android:layout_columnSpan="1"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/age_range" />

        <EditText
            android:id="@+id/age_range_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:hint="@string/age_range_from"></EditText>


        <EditText
            android:id="@+id/age_range_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_row="1"
            android:hint="@string/age_range_to">
        </EditText>
    </GridLayout>
        <Button
            android:id="@+id/btnUpdateDb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="update" />
    </LinearLayout>
</ScrollView>